\end_layout

\end_inset

 
\begin_inset Formula ${\cal G}$
\end_inset

 has specification;
\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
item[(II)]
\end_layout

\end_inset

 
\begin_inset Formula $\vphi$
\end_inset

 has Bowen property on 
\begin_inset Formula ${\cal G}$
\end_inset

;
\end_layout

\begin_layout Theorem
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
item[(III)]
\end_layout

\end_inset

 
\begin_inset Formula $P([{\cal P}]\cup[{\cal S}],\vphi)<P(\vphi)$
\end_inset

.
\end_layout

