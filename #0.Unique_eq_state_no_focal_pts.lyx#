\begin_layout Lemma
\begin_inset ERT
status open

\begin_layout Plain Layout

[
\backslash
cite{BCFT2017}, Lemma 2.9]
\end_layout

\end_inset

 Let 
\begin_inset Formula $v\in T^{1}M$
\end_inset

 and 
\begin_inset Formula $J^{u}$
\end_inset

 (resp.
 
\begin_inset Formula $J^{s}$
\end_inset

) be a unstable (resp.
 stable) Jacobi field along 
\begin_inset Formula $\gamma_{v}$
\end_inset

.
 Then 
\begin_inset Formula 
\[
||J^{u}(t)||\geq e^{\int_{0}^{t}\lambda^{u}(f_{s}v)ds}||J^{u}(0)||{\rm \ }and\ ||J^{s}(t)||\leq e^{-\int_{0}^{t}\lambda^{s}(f_{s}v)ds}||J^{s}(0)||.
\]

\end_inset

 
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Standard
A handy lemma for computation: 
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Lemma
\begin_inset CommandInset label
LatexCommand label
name "alglem"

\end_inset

 Let 
\begin_inset Formula $\psi:\mathbb{R}\rightarrow\mathbb{R}$
\end_inset

 be a non-negative integrable function and 
\begin_inset Formula $\mbox{\psi}_{T}(t):=\int_{-T}^{T}\psi(t+\tau)d\tau$
\end_inset

.
 For every 
\begin_inset Formula $a\leq b$
\end_inset

, 
\begin_inset Formula 
\[
\int_{a}^{b}\psi_{T}(t)dt\leq2T\int_{a-T}^{b+T}\psi(t)dt.
\]

\end_inset

 In particular, 
\begin_inset Formula $0\leq\int_{0}^{t}\lambda_{T}^{\sigma}(f_{s}v)ds\leq2T\int_{0}^{t}\lambda^{\sigma}(f_{s}v)ds$
\end_inset

 for all 
\begin_inset Formula $t,T>0$
\end_inset

 and 
\begin_inset Formula $\sigma\in\{s,u\}.$
\end_inset


\end_layout

\begin_layout Proof
For 
\begin_inset Formula $b-a\leq2T$
\end_inset

, 
\begin_inset Formula 
\begin{eqnarray*}
\int_{a}^{b}\psi_{T}(t)dt & = & \int_{a}^{b}\int_{-T}^{T}\psi(t+\tau)d\tau dt\\
 & = & \int_{a-T}^{b-T}(\tau+T-a)\psi(\tau)d\tau+\int_{b-T}^{a+T}(b-a)\psi(\tau)d\tau+\int_{a+T}^{b+T}(b+T-\tau)\psi(\tau)d\tau\\
 & \leq & (b-a)\int_{a-T}^{b-T}\psi(\tau)d\tau+(b-a)\int_{b-T}^{a+T}\psi(\tau)d\tau+(b-a)\int_{a+T}^{b+T}\psi(\tau)d\tau\\
 & = & (b-a)\int_{a-T}^{b+T}\psi(\tau)d\tau\leq2T\int_{a-T}^{b+T}\psi(\tau)d\tau.
\end{eqnarray*}

\end_inset

For 
\begin_inset Formula $b-a\geq2T$
\end_inset

, 
\begin_inset Formula 
\begin{eqnarray*}
\int_{a}^{b}\psi_{T}(t)dt & = & \int_{a}^{b}\int_{-T}^{T}\psi(t+\tau)d\tau dt\\
 & = & \int_{a-T}^{a+T}(\tau+T-a)\psi(\tau)d\tau+\int_{a+T}^{b-T}2T\psi(\tau)d\tau+\int_{b-T}^{b+T}(s+T-\tau)\psi(\tau)d\tau\\
 & \leq & 2T\int_{a-T}^{a+T}\psi(\tau)d\tau+2T\int_{a+T}^{b-T}\psi(\tau)d\tau+2T\int_{b-T}^{b+T}\psi(\tau)d\tau=2T\int_{a-T}^{b+T}\psi(\tau)d\tau.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Standard
As in the paper, let 
\begin_inset Formula $\delta$
\end_inset

 be small enough so that if 
\begin_inset Formula $d_{K}(v,w)<\delta e^{\Lambda}$
\end_inset

, then 
\begin_inset Formula $|\lambda_{T}(v)-\lambda_{T}(w)|<\frac{\eta}{2}$
\end_inset

, and define 
\begin_inset Formula $\tilde{\lambda}=\max\{0,\lambda(v)-\frac{\eta}{2}\}$
\end_inset

 and 
\begin_inset Formula $\tilde{\lambda}_{T}=\max\{0,\lambda_{T}(v)-\frac{\eta}{2}\}$
\end_inset

.
 If 
\begin_inset Formula $w\in B_{t}(v,\delta)$
\end_inset

 then 
\begin_inset Formula $d_{K}(f_{s}v,f_{s}w)\leq\delta e^{\Lambda}$
\end_inset

 and 
\begin_inset Formula 
\[
\int_{0}^{t}\lambda(f_{\tau}w)d\tau\geq\int_{0}^{t}\widetilde{\lambda}(f_{\tau}v)d\tau\geq\int_{0}^{t}\lambda(f_{\tau}v)d\tau-\frac{\eta}{2}t.
\]

\end_inset


\begin_inset Formula 
\[
\int_{0}^{t}\lambda_{T}^{u}(f_{\tau}w)d\tau\geq\int_{0}^{t}\widetilde{\lambda_{T}^{u}}(f_{\tau}v)d\tau\geq\int_{0}^{t}\lambda_{T}^{u}(f_{\tau}v)d\tau-\frac{\eta}{2}t.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{t}\lambda_{T}^{s}(f_{\tau}w)d\tau\geq\int_{0}^{t}\widetilde{\lambda_{T}^{s}}(f_{\tau}v)d\tau\geq\int_{0}^{t}\lambda_{T}^{s}(f_{\tau}v)d\tau-\frac{\eta}{2}t.
\]

\end_inset


\begin_inset Formula 
\[
\int_{0}^{t}\lambda_{T}(f_{\tau}w)d\tau\geq\int_{0}^{t}\tilde{\lambda}_{T}(f_{\tau}v)d\tau\geq\int_{0}^{t}\lambda_{T}(f_{\tau}v)d\tau-\frac{\eta}{2}t.
\]

\end_inset


\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Standard

\color green
Need To Define
\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $\lambda_{T}^{u}$
\end_inset

 be the minimal eigenvalue (in surface case, it is 
\begin_inset Quotes eld
\end_inset

the
\begin_inset Quotes erd
\end_inset

 eigenvalue) of the operator 
\begin_inset Formula ${\cal U}_{T}^{u}(v):T_{\pi v}H^{u}(v)\to T_{\pi v}H^{u}(v)$
\end_inset

 by 
\begin_inset Formula $T_{\pi v}H^{u}(v)\ni w\mapsto\int_{-T}^{T}P_{-\tau}{\cal U}^{u}(f_{\tau}v)(P_{\tau}v)\in T_{\pi v}H^{u}(v)$
\end_inset

 where 
\begin_inset Formula $P_{t}$
\end_inset

 is the parallel transportation along the geodesic 
\begin_inset Formula $\gamma_{v}(t)$
\end_inset

.
\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $\lambda_{T}^{s}(v):=\lambda_{T}^{u}(-v)$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $\lt(v):=\min\{\lt^{s}(v),\lt^{u}(v)\}$
\end_inset


\end_layout

