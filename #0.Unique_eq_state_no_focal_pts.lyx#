\begin_layout Itemize

\color green
Horoshperes 
\begin_inset Formula $H^{s}(v):=\pi W^{s}(v)$
\end_inset

 and 
\begin_inset Formula $H^{u}(v):=\pi W^{u}(v)$
\end_inset

 
\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula ${\cal U}^{s},{\cal U}^{u}$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $\lambda$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $W^{cs}(v):={\displaystyle \bigcup_{t\in\R}W^{s}(f_{t}(v))}$
\end_inset

; 
\begin_inset Formula $W^{cu}(v):={\displaystyle \bigcup_{t\in\R}W^{u}(f_{t}(v))}$
\end_inset

.
\end_layout

\begin_layout Itemize

\color green
Busemann function 
\begin_inset Formula $b_{v}(x):={\displaystyle \lim_{t\to\infty}d(x,\gamma_{v}(t))-t}$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $d_{S}$
\end_inset

 Sasaki metric on 
\begin_inset Formula $TM$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $d_{K}(u,v):=\max\{d(\g_{u}(t),\g_{v}(t)):\ t\in[0,1]\}$
\end_inset

 Knieper metric on 
\begin_inset Formula $T^{1}M$
\end_inset

 
\end_layout

\begin_layout Itemize

\color green
Bowen ball w.r.t.
 
\begin_inset Formula $d_{K}$
\end_inset

: 
\begin_inset Formula $B_{T}(v,\varepsilon):=\{w\in T^{1}M:\ d_{K}(f_{t}w,f_{t}v)<\varepsilon\ for\ all\ 0\leq t\leq T\}$
\end_inset


\end_layout

\begin_layout Itemize

\color green
Intrinsic metric on 
\begin_inset Formula $W^{s}(v)$
\end_inset

: 
\begin_inset Formula $d^{s}(u,w):=\inf\{l(\pi\g):\ \g:[0,1]\to W^{s}(v),\ \g(0)=u,\ \g(1)=w\}$
\end_inset

 
\end_layout

\begin_layout Itemize

\color green
Intrinsic metric on 
\begin_inset Formula $W^{cs}(v):$
\end_inset

 locally, 
\begin_inset Formula $d^{s}(u,w):=|t|+d^{s}(f_{t}u,w)$
\end_inset

 where 
\begin_inset Formula $t$
\end_inset

 is the unique value so that 
\begin_inset Formula $f_{t}u\in W^{s}(w)$
\end_inset

, which extends to whole 
\begin_inset Formula $W^{cs}(v)$
\end_inset


\end_layout

\begin_layout Itemize

\shape italic
\color green
local stable leaf
\shape default
 through 
\begin_inset Formula $v$
\end_inset

 of size 
\begin_inset Formula $\rho$
\end_inset

: 
\begin_inset Formula $W_{\rho}^{s}(v):=\{w\in W^{s}(s):\ d^{s}(u,v)\leq\rho\}$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula $d^{u}$
\end_inset

, 
\begin_inset Formula $d^{cu}$
\end_inset

, 
\begin_inset Formula $W_{\rho}^{cs}(v),W_{\rho}^{cu}(v)$
\end_inset

 are defined in the same manner 
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Remark
When 
\begin_inset Formula $\rho$
\end_inset

 is small enough, the intrinsic metrics are uniformly equivalent to 
\begin_inset Formula $d_{S}$
\end_inset

 and 
\begin_inset Formula $d_{K}$
\end_inset

.
\end_layout

