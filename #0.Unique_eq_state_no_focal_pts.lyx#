\begin_layout Subsection
Bowen property for Hölder potentials
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Standard
Lemmas in this section are exactly the same as their corresponding in 
\begin_inset CommandInset citation
LatexCommand cite
key "BCFT2017"

\end_inset

.
 The proofs follow verbatim.
 However, for the completeness we still give proofs there.
 
\end_layout

\begin_layout Lemma
\begin_inset Argument 1
status collapsed

\begin_layout Plain Layout
Lemma 7.3
\end_layout

\end_inset

If 
\begin_inset Formula $\varphi$
\end_inset

 is Hölder along stable leaves (resp.
 unstable leaves), then 
\begin_inset Formula $\varphi$
\end_inset

 has the Bowen property along stable leaves (resp.
 unstable leaves) with respect to 
\begin_inset Formula $\gt(\eta)$
\end_inset

.
 
\end_layout

\begin_layout Proof
It is a direct consequence of Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:312"

\end_inset

.
 We prove the stable leaves case, and for unstable leaves one uses the same
 argument.
\end_layout

\begin_layout Proof
Let 
\begin_inset Formula $(v,t)\in\gt(\eta)$
\end_inset

, 
\begin_inset Formula $\delta_{1}>0$
\end_inset

 be as in Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:312"

\end_inset

 and 
\begin_inset Formula $\delta_{2}>0$
\end_inset

 be given by the Hölder continuity along stable leaves.
 Then for 
\begin_inset Formula $\delta=\min\{\delta_{1},\delta_{2}\}$
\end_inset

 and 
\begin_inset Formula $w\in W_{\delta}^{s}(v)$
\end_inset

, we have
\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{align*}
\left|\Phi(v,t)-\Phi(w,t)\right| & \leq\int_{0}^{t}\left|\varphi(f_{\tau}v)-\varphi(f_{\tau}w)\right|{\rm d}\tau\leq\int_{0}^{t}C_{1}\cdot d^{s}(f_{\tau}v,f_{\tau}w)^{\theta}{\rm d}\tau\\
 & \leq\int_{0}^{t}C_{1}\cdot\left(d^{s}(v,w)\cdot e^{-\frac{\eta}{4T}\tau}\right)^{\theta}{\rm d}\tau\leq C_{1}\cdot d^{s}(v,w)^{\theta}\int_{0}^{t}e^{\frac{-\eta\theta}{4T}\tau}{\rm d}\tau\\
 & \leq C_{1}\delta^{\theta}\frac{4T}{\eta\theta}.
\end{align*}

\end_inset


\end_layout

\begin_layout Lemma
\begin_inset Argument 1
status collapsed

\begin_layout Plain Layout
Lemma 7.4
\end_layout

\end_inset

Given 
\begin_inset Formula $\eta>0$
\end_inset

, suppose 
\begin_inset Formula $\varphi$
\end_inset

 has the Bowen property along stable leaves and unstable leaves with respect
 to 
\begin_inset Formula $\gt(\eta)$
\end_inset

.
 Then 
\begin_inset Formula $\varphi:T^{1}M\to\mathbb{R}$
\end_inset

 has the Bowen property on 
\begin_inset Formula $\gt(\eta)$
\end_inset

.
 
\end_layout

\begin_layout Proof
We first notice that since the curvature of horoshperes is uniformly bounded,
 
\begin_inset Formula $d_{K}$
\end_inset

 and 
\begin_inset Formula $d^{u}$
\end_inset

 are equivalent on 
\begin_inset Formula $W_{\delta}^{u}$
\end_inset

 when 
\begin_inset Formula $\delta$
\end_inset

 small enough.
 Hence, there exist 
\begin_inset Formula $\delta_{0},C>0$
\end_inset

 such that 
\begin_inset Formula $d^{u}(u,v)\leq Cd_{K}(u,v)$
\end_inset

 for 
\begin_inset Formula $v\in T^{1}M$
\end_inset

 and 
\begin_inset Formula $u\in W_{\delta_{0}}^{u}(v).$
\end_inset

 Let 
\begin_inset Formula $\delta_{1}>0$
\end_inset

 be the radius that guarantees any 
\begin_inset Formula $(v,t)\in G_{T}(\eta)$
\end_inset

 the foliations 
\begin_inset Formula $W^{u}$
\end_inset

 and 
\begin_inset Formula $W^{cs}$
\end_inset

 have local product structure at scale 
\begin_inset Formula $\delta_{1}$
\end_inset

 with constant 
\begin_inset Formula $\kappa$
\end_inset

.
 Let 
\begin_inset Formula $\delta_{2}>0$
\end_inset

 be the radius given in Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:312"

\end_inset

 that if 
\begin_inset Formula $(v,t)\in\gt(\eta)$
\end_inset

, then for 
\begin_inset Formula $w\in W_{\delta_{2}}^{u}(v)$
\end_inset

 we have 
\begin_inset Formula $(w,t)\in\gt(\frac{\eta}{2})$
\end_inset

.
 Let 
\begin_inset Formula $\delta_{3},K>0$
\end_inset

 be the constants from the Bowen property for 
\begin_inset Formula $\varphi$
\end_inset

 along stable and unstable leaves with respect to 
\begin_inset Formula $\gt(\frac{\eta}{2})$
\end_inset

.
 Without loss generality we may assume 
\begin_inset Formula $\delta_{3}<\delta_{0}$
\end_inset

.
\end_layout

\begin_layout Proof
Let 
\begin_inset Formula $\delta=\min\{\delta_{0},\delta_{1},\delta_{2},\frac{\delta_{3}}{2\kappa C},\frac{\delta_{3}}{\kappa}\}$
\end_inset

, 
\begin_inset Formula $(v,t)\in\gt(\eta)$
\end_inset

, and 
\begin_inset Formula $w\in B_{t}(v,\delta)$
\end_inset

.
\end_layout

\begin_layout Proof
By the LPS there exists 
\begin_inset Formula $v'\in W_{\kappa\delta}^{u}\cap W_{\kappa\delta}^{cs}(v)$
\end_inset

.
 We claim: 
\begin_inset Formula $f_{t}(v')\in W_{\delta_{3}}^{u}(f_{t}w)$
\end_inset

.
 However, we will prove this claim in the end of this proof.
 Moreover, there exists 
\begin_inset Formula $\rho\in[-\kappa\delta,\kappa\delta]$
\end_inset

 such that 
\begin_inset Formula $f_{\rho}(v')\in W_{\kappa\delta}^{s}(v)\subset W_{\delta_{3}}^{s}(v)$
\end_inset

.
 Thus assuming the claim and by the Bowen property we have 
\begin_inset Formula 
\[
\left|\Phi(v,t)-\Phi(f_{\rho}v',t)\right|\leq K{\rm \ and}\ \left|\Phi(v',t)-\Phi(w,t)\right|\leq K.
\]

\end_inset

Hence, assuming the claim we have
\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{align*}
\left|\Phi(v,t)-\Phi(w,t)\right| & \leq\left|\Phi(v,t)-\Phi(f_{\rho}v',t)\right|+\left|\Phi(f_{\rho}v',t)-\Phi(v',t)\right|+\left|\Phi(v',t)-\Phi(w,t)\right|\\
 & \leq2K+2||\varphi||\cdot|\rho|.
\end{align*}

\end_inset


\end_layout

\begin_layout Proof
To see the claim, i.e., 
\begin_inset Formula $f_{t}(v')\in W_{\delta_{3}}^{u}(f_{t}w)$
\end_inset

: suppose it is false, then there exists 
\begin_inset Formula $\sigma\in[0,t]$
\end_inset

 such that 
\begin_inset Formula 
\begin{equation}
\delta_{0}<d^{u}(f_{\sigma}v',f_{\sigma}w)\leq\delta_{3}.\label{eq:7.1}
\end{equation}

\end_inset


\end_layout

\begin_layout Proof
Notice that 
\begin_inset Formula $v'\in W_{\kappa\delta}^{cs}(v)\subset B_{t}(v,\kappa\delta)$
\end_inset

, so 
\begin_inset Formula 
\[
d_{K}(f_{\sigma}v',f_{\sigma}w)\leq d_{K}(f_{\sigma}v',f_{\sigma}v)+d_{K}(f_{\sigma}v,f_{\sigma}w)\leq2\kappa\delta.
\]

\end_inset

Thus, 
\begin_inset Formula $d^{u}(f_{\sigma}v',f_{\sigma}w)\leq2C\kappa\delta<\delta_{3}$
\end_inset

 and we have derived a contradiction (to (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:7.1"

\end_inset

)).
 
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Theorem
\begin_inset CommandInset label
LatexCommand label
name "thm:Holder_Bowen"

\end_inset

If 
\begin_inset Formula $\varphi$
\end_inset

 is Hölder continuous, then it has the Bowen property with respect to 
\begin_inset Formula $\gt(\eta)$
\end_inset

 for any 
\begin_inset Formula $\eta>0$
\end_inset

.
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Subsection
Bowen property for the geometric potential 
\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Standard

\color red
???Change Notation???
\end_layout

\begin_layout Standard
We denote by 
\begin_inset Formula $J_{v}^{u}$
\end_inset

 the unstable Jacobi field along 
\begin_inset Formula $\gamma_{v}$
\end_inset

 with 
\begin_inset Formula $J_{v}^{u}(0)=1$
\end_inset

.
 Let 
\begin_inset Formula $U_{v}^{u}:=(J_{v}^{u})'/J_{v}^{u}$
\end_inset

, then 
\begin_inset Formula $U_{v}^{u}$
\end_inset

 is a solution to the Riccati equation 
\begin_inset Formula 
\[
U'+U^{2}+K(f_{t}v)=0.
\]

\end_inset

Notice that we also have 
\begin_inset Formula $U_{v}^{u}(t)=\lambda^{u}(f_{t}v)$
\end_inset

.
 From Lemma 7.6 in BCFT, in order to prove 
\begin_inset Formula $\varphi^{u}$
\end_inset

 has Bowen property on 
\begin_inset Formula $\mathcal{G}_{T}(\eta)$
\end_inset

, we have only to prove the following proposition: 
\end_layout

\begin_layout Lemma
\begin_inset Argument 1
status collapsed

\begin_layout Plain Layout
Prop 7.7
\end_layout

\end_inset


\begin_inset CommandInset label
LatexCommand label
name "prop:77"

\end_inset

 For every 
\begin_inset Formula $\eta>0$
\end_inset

, there are 
\begin_inset Formula $\delta,Q,\xi>0$
\end_inset

 such that given any 
\begin_inset Formula $(v,T_{0})\in\mathcal{G}_{T}(\eta),w_{1}\in W_{\delta}^{s}(v)$
\end_inset

 and 
\begin_inset Formula $w_{2}\in f_{-T_{0}}W_{\delta}^{u}(f_{T_{0}}v)$
\end_inset

, for every 
\begin_inset Formula $0\leq t\leq T_{0}$
\end_inset

 we have 
\begin_inset Formula 
\[
|U_{v}^{u}(t)-U_{w_{1}}^{u}(t)|\leq Qe^{-\xi t},
\]

\end_inset


\begin_inset Formula 
\[
|U_{v}^{u}(t)-U_{w_{2}}^{u}(t)|\leq Q(e^{-\xi t}+e^{-\xi(T_{0}-t)}).
\]

\end_inset


\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Lemma
\begin_inset CommandInset label
LatexCommand label
name "lem:710711"

\end_inset

 For every 
\begin_inset Formula $\eta>0$
\end_inset

, there are 
\begin_inset Formula $\delta,Q$
\end_inset

 such that given any 
\begin_inset Formula $(v,T_{0})\in\mathcal{G}_{T}(\eta),w\in B_{T_{0}}(v,\delta)$
\end_inset

, for every 
\begin_inset Formula $0\leq t\leq T_{0}$
\end_inset

 we have 
\begin_inset Formula 
\[
|U_{v}^{u}(t)-U_{w}^{u}(t)|\leq Q\exp\left(-\frac{\eta t}{T}\right)+\int_{0}^{t}\exp\left(-\frac{\eta(t-\tau)}{4T}\right)|K(f_{\tau}v)-K(f_{\tau}w)|d\tau.
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Argument 1
status collapsed

\begin_layout Plain Layout
Proof of Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "prop:77"

\end_inset


\end_layout

\end_inset

We may choose small 
\begin_inset Formula $\delta$
\end_inset

 so that 
\begin_inset Formula $w_{1},w_{2}\in\mathcal{G}_{T}(\eta/2)$
\end_inset

.
\end_layout

\begin_layout Proof
Since 
\begin_inset Formula $w_{1}\in W_{\delta}^{s}(v)$
\end_inset

, the smoothness of 
\begin_inset Formula $K$
\end_inset

 together with Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:312"

\end_inset

 implies 
\begin_inset Formula 
\[
|K(f_{\tau}v)-K(f_{\tau}w_{1})|\leq Q'd_{K}(f_{\tau}v,f_{\tau}w_{1})\leq Q'd^{s}(f_{\tau}v,f_{\tau}w_{1})\leq Q\exp\left(-\frac{\eta\tau}{4T}\right),
\]

\end_inset

for any 
\begin_inset Formula $\tau\in[0,T_{0}]$
\end_inset

.
 Thus by Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:710711"

\end_inset

: 
\begin_inset Formula 
\[
|U_{v}^{u}(t)-U_{w_{1}}^{u}(t)|\leq Q\exp\left(-\frac{\eta t}{T}\right)+Qt\exp\left(-\frac{\eta t}{4T}\right)\leq Qe^{-\xi t}.
\]

\end_inset

once we fix 
\begin_inset Formula $\xi<\eta/2T$
\end_inset

.
 Hence 
\begin_inset Formula $|U_{v}^{u}(t)-U_{w_{1}}^{u}(t)|\leq Qe^{-\xi t}$
\end_inset

.
\end_layout

\begin_layout Proof
For 
\begin_inset Formula $w_{2}\in f_{-T_{0}}W_{\delta}^{u}(f_{T_{0}}v)$
\end_inset

, we have the following estimation for 
\begin_inset Formula $K$
\end_inset

: 
\begin_inset Formula 
\[
|K(f_{\tau}v)-K(f_{\tau}w_{2})|\leq Qd_{K}(f_{\tau}v,f_{\tau}w_{2})\leq Qd^{u}(f_{\tau-T_{0}}f_{T_{0}}v,f_{\tau-T_{0}}f_{T_{0}}w_{2})\leq Q\exp\left(-\frac{\eta(T_{0}-\tau)}{4T}\right)
\]

\end_inset

for any 
\begin_inset Formula $\tau\in[0,T_{0}]$
\end_inset

.
 We use Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:710711"

\end_inset

 again and get: 
\begin_inset Formula 
\begin{eqnarray*}
|U_{v}^{u}(t)-U_{w_{2}}^{u}(t)| & \leq & Q\exp\left(-\frac{\eta t}{2T}\right)+Q\int_{0}^{t}\exp\left(-\frac{\eta(T_{0}-\tau)}{4T}\right)d\tau\\
 & \leq & Q\exp\left(-\frac{\eta t}{2T}\right)+Q\exp\left(-\frac{\eta(T_{0}-t)}{4T}\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout --Separator--

\end_layout

\begin_layout Proof
\begin_inset Argument 1
status collapsed

\begin_layout Plain Layout
Proof of Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:710711"

\end_inset


\end_layout

\end_inset

Without loss of generality, we may assume 
\begin_inset Formula $U_{w}^{u}(0)\geq U_{v}^{u}(0)$
\end_inset

 and let 
\begin_inset Formula $U_{1}$
\end_inset

 be the solution of the Riccati equation along 
\begin_inset Formula $\gamma_{v}$
\end_inset

 with 
\begin_inset Formula $U_{1}(0)=U_{w}^{u}(0)$
\end_inset

.
 We have 
\begin_inset Formula 
\[
|U_{v}^{u}(t)-U_{w}^{u}(t)|\leq|U_{v}^{u}(t)-U_{1}(t)|+|U_{1}(t)-U_{w}^{u}(t)|.
\]

\end_inset

Since 
\begin_inset Formula $U_{w}^{u}(0)\geq U_{v}^{u}(0)$
\end_inset

 and both 
\begin_inset Formula $U_{1}$
\end_inset

 and 
\begin_inset Formula $U_{v}^{u}$
\end_inset

 are Riccati solutions along 
\begin_inset Formula $\gamma_{v}$
\end_inset

, we have 
\begin_inset Formula $U_{1}(t)\geq U_{v}^{u}(t)=\lambda^{u}(f_{t}v)$
\end_inset

 for all 
\begin_inset Formula $t$
\end_inset

.
 Hence 
\begin_inset Formula 
\[
(U_{1}-U_{v}^{u})'=-(U_{1}-U_{v}^{u})(U_{1}+U_{v}^{u})\leq-2\lambda^{u}(f_{t}v)(U_{1}-U_{v}^{u}).
\]

\end_inset

Thus 
\begin_inset Formula $(U_{1}(t)-U_{v}^{u}(t))\exp(\int_{0}^{t}2\lambda(f_{s}v)ds)$
\end_inset

 is not increasing.
 By Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:312"

\end_inset

 we have 
\begin_inset Formula 
\begin{eqnarray*}
0 & \leq & U_{1}(t)-U_{v}^{u}(t)\leq(U_{w}^{u}(0)-U_{v}^{u}(0))\exp\left(-\int_{0}^{t}2\lambda^{u}(f_{s}v)ds\right)\\
 & \leq & Q\exp\left(-\frac{1}{T}\int_{0}^{t}\lambda_{T}^{u}(f_{s}v)ds\right)\leq Q\exp\left(-\frac{\eta t}{T}\right).
\end{eqnarray*}

\end_inset

Now we estimate 
\begin_inset Formula $|U_{1}(t)-U_{w}^{u}(t)|$
\end_inset

.
 We may assume 
\begin_inset Formula $U_{1}(t)>U_{w}^{u}(t)$
\end_inset

 (the other case is similar).
 Suppose 
\begin_inset Formula $U_{1}(s_{0})=U_{w}^{u}(s_{0})$
\end_inset

 at 
\begin_inset Formula $s_{0}<t$
\end_inset

 and 
\begin_inset Formula $U_{1}(\tau)>U_{w}^{u}(\tau)$
\end_inset

 for any 
\begin_inset Formula $\tau\in(s_{0},t)$
\end_inset

.
 By taking difference of the corresponding Riccati equations, for any 
\begin_inset Formula $\tau\in(s_{0},t)$
\end_inset

, we have: 
\begin_inset Formula 
\begin{eqnarray*}
(U_{1}-U_{w}^{u})'(\tau) & = & -(U_{1}(\tau)-U_{w}^{u}(\tau))(U_{1}(\tau)+U_{w}^{u}(\tau))+K(f_{\tau}v)-K(f_{\tau}w)\\
 & \leq & -2\lambda^{u}(f_{\tau}w)(U_{1}-U_{w}^{u})(\tau)+|K(f_{\tau}v)-K(f_{\tau}w)|.
\end{eqnarray*}

\end_inset

Thus 
\begin_inset Formula 
\begin{eqnarray*}
 &  & \frac{d}{d\tau}\left((U_{1}(\tau)-U_{v}^{u}(\tau))\exp\left(\int_{s_{0}}^{\tau}2\lambda^{u}(f_{s}w)ds\right)\right)\\
 & = & \exp\left(\int_{s_{0}}^{\tau}2\lambda^{u}(f_{s}w)ds\right)((U_{1}-U_{w}^{u})'(\tau)+2\lambda^{u}(f_{\tau}w)(U_{1}-U_{w}^{u})(\tau))\\
 & \leq & \exp\left(\int_{s_{0}}^{\tau}2\lambda^{u}(f_{s}w)ds\right)|K(f_{\tau}v)-K(f_{\tau}w)|.
\end{eqnarray*}

\end_inset

Together with Lemma 
\begin_inset CommandInset ref
LatexCommand ref
reference "lem:312"

\end_inset

, we have 
\begin_inset Formula 
\begin{eqnarray*}
U_{1}(t)-U_{v}^{u}(t) & \leq & \exp\left(-\int_{s_{0}}^{t}2\lambda^{u}(f_{s}w)ds\right)\int_{s_{0}}^{t}\exp\left(\int_{s_{0}}^{\tau}2\lambda^{u}(f_{s}w)ds\right)|K(f_{\tau}v)-K(f_{\tau}w)|d\tau\\
 & = & \int_{s_{0}}^{t}\exp\left(-\int_{\tau}^{t}2\lambda^{u}(f_{s}w)ds\right)|K(f_{\tau}v)-K(f_{\tau}w)|d\tau\\
 & \leq & \int_{s_{0}}^{t}\exp\left(-\frac{1}{T}\int_{\tau}^{t}\lambda_{T}^{u}(f_{s}w)ds\right)|K(f_{\tau}v)-K(f_{\tau}w)|d\tau\\
 & \leq & \int_{0}^{t}\exp\left(-\frac{\eta(t-\tau)}{4T}\right)|K(f_{\tau}v)-K(f_{\tau}w)|d\tau.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout --Separator--

\end_layout

