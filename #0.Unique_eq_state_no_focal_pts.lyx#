\begin_layout Standard

\color green
Need To Define
\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula ${\cal P}_{T}(\eta):=\{(v,t)\colon\ \int_{0}^{\tau}\lambda_{T}(f_{s}v)ds<\tau\eta{\rm \ for}\ {\rm some\ {\rm \tau\in[0,\tau]}}\}$
\end_inset

.
\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula ${\cal {\cal S}}_{T}(\eta):=\{(v,t)\colon\ \int_{0}^{\tau}\lambda_{T}(f_{-s}f_{t}v)ds\geq\tau\eta{\rm \ for}\ {\rm some\ {\rm \tau\in[0,\tau]}}\}$
\end_inset

.
\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula ${\cal B_{T}}(\eta)={\cal P}_{T}(\eta)\cup{\cal S}_{T}(\eta)$
\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula ${\cal G}_{T}(\eta):=\{(v,t)\colon\ \int_{0}^{\tau}\lambda_{T}(f_{s}v)ds\geq\tau\eta{\rm \ {\rm and\ }}\int_{0}^{\tau}\lambda_{T}(f_{-s}f_{t}v)ds\geq\tau\eta\ \forall\tau\in[0,t]\}.$
\end_inset


\end_layout

\begin_layout Itemize

\color green
We have the following decomposition: 
\begin_inset Formula 
\begin{equation}
\mathcal{G}:=\gt(\eta)~~\text{ and }~~\mathcal{P}\cup{\cal S}:={\cal B}_{T}(\eta).\label{eq: decomposition}
\end{equation}

\end_inset

Given an orbit segment 
\begin_inset Formula $(x,t)\in T^{1}S\times\mathbb{R}^{+}$
\end_inset

, there exists a unique 
\begin_inset Formula $p,g,s\geq0$
\end_inset

 such that 
\begin_inset Formula $t=p+g+s$
\end_inset

, and 
\begin_inset Formula 
\[
(x,p)\in{\cal P}_{T}(\eta),~~~(f^{p}x,g)\in{\cal G}_{T}(\eta),\text{ and }(f^{p+g}x,s)\in{\cal S}_{T}(\eta).
\]

\end_inset


\end_layout

\begin_layout Itemize

\color green
\begin_inset Formula ${\rm Reg}_{T}(\eta):=\{v\in T^{1}M:\ \lambda_{T}(v)\geq\eta\}.$
\end_inset


\end_layout

\begin_layout Itemize

\color green
stable and unstable Jacobi fields estimates along 
\begin_inset Formula $\gt(\eta)$
\end_inset

, 
\begin_inset Formula $\ct(\eta)$
\end_inset

 
\end_layout

\begin_layout Itemize

\color green
expending and contracting estimates along 
\begin_inset Formula $\gt(\eta)$
\end_inset

 
\end_layout

\begin_layout Itemize

\color green
angle between 
\begin_inset Formula $E^{u}(v)$
\end_inset

 and 
\begin_inset Formula $E^{s}(v)$
\end_inset

 for 
\begin_inset Formula $v\in\gt(\eta)$
\end_inset


\end_layout

