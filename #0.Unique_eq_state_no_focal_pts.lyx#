\begin_inset CommandInset citation
LatexCommand cite
after "Lemma, p. 246"
key "Eschenburg:1977kn"

\end_inset


\begin_inset Formula ${\rm )}$
\end_inset

 
\begin_inset Formula $E^{u}(v)\cap E^{s}(v)\neq\emptyset$
\end_inset

 if and only if 
\begin_inset Formula $v\in{\rm Sing}$
\end_inset

.
\end_layout

